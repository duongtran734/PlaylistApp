@model PlaylistApp.Entities.Album

@{
    ViewData["Title"] = "Create";
}

<div class="row orderForm">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Album" method="post" class="form-horizontal" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="col-md-offset-2 p-lg-4">Create new album</h3>
            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Title" class="form-control" placeholder="Enter album's title" style="width:500px"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-success" type="submit" value="Create" />
                    <input class="btn btn-secondary" type="submit" value="Return" asp-controller="Album" asp-action="Index" />

                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
