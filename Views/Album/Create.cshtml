@model PlaylistApp.Models.ViewModels.AlbumViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row orderForm">
    <div class="col-md-6">
        <h3 class="p-lg-4">Create new album</h3>
        <form asp-action="Create" asp-controller="Album" method="post" class="form-horizontal" role="form" style='width:550px'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.Referer)

            <div class="form-group">
                <label asp-for="Album.Title" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Album.Title" class="form-control" placeholder="Enter album's title" style="width:100%;min-width:0;" />
                    <span asp-validation-for="Album.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-success" type="submit" value="Create" />
                    <input class="btn btn-secondary" type="submit" value="Return" asp-controller="Album" asp-action="Index" />

                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
